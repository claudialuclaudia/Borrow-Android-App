<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/borrowGreen</item>
        <item name="colorPrimaryDark">@color/borrowGreen</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="UserActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/user_activity_background</item>
    </style>

</resources>
