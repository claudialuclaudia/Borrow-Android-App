<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    >

    <TextView
        android:id="@+id/greyPadding"
        android:layout_width="500dp"
        android:layout_height="6dp"
        android:background="@color/grey"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/greyPadding"
        android:src="@drawable/kelly" />

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:id="@+id/refresh"
        android:src="@drawable/ic_action_refresh"
        android:layout_below="@+id/profile_image"
        android:layout_marginLeft="18dp"/>

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:id="@+id/chat"
        android:src="@drawable/ic_action_chat"
        android:layout_below="@+id/profile_image"
        android:layout_toRightOf="@+id/refresh"
        android:layout_marginLeft="2dp"/>

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/ic_action_favorite"
        android:layout_below="@+id/profile_image"
        android:layout_toRightOf="@+id/chat"
        android:layout_marginLeft="1dp"/>

    <LinearLayout
        android:id="@+id/reqLL"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/greyPadding"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        >

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="A request item"
            android:textSize="12sp"
            android:maxLines="2"
            android:gravity="center_vertical"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/requestReason"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/userNameText"
            android:layout_alignStart="@+id/userNameText"
            android:layout_below="@+id/userNameText"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="TextView" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/reqAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/borrowGreen"
        android:textStyle="bold"
        android:text="$100" />

</RelativeLayout>