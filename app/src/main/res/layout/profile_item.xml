<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/imbalance"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:textSize="12sp"
            android:text="Current Balance"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="-$50"
            android:textSize="14sp"
            android:textColor="@color/borrowGreen"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/greyPadding"
            android:layout_width="500dp"
            android:layout_height="6dp"
            android:background="@color/grey"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/paymentDueDate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:textSize="12sp"
            android:text="Payment Due Date"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="01/25/18"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/greyPadding2"
            android:layout_width="500dp"
            android:layout_height="6dp"
            android:background="@color/grey"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/minPayDue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:textSize="12sp"
            android:text="Minimum Payment Due"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="$25"
            android:textSize="14sp"
            android:textColor="@color/borrowGreen"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/greyPadding3"
            android:layout_width="500dp"
            android:layout_height="6dp"
            android:background="@color/grey"
            />
    </LinearLayout>

</LinearLayout>