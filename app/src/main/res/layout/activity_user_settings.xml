<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cash.borrow.android.UserSettingsActivity"
    android:background="@color/borrowGreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap on camera to choose profile picture"
            android:textAlignment="center"
            android:textSize="14dp"/>

        <ImageView
            android:id="@+id/imageViewUpload"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/if_camera_115759"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="5dp"
            android:hint="Your First Name"
            android:textSize="12dp"
            android:inputType="textPersonName"
            android:background="@drawable/edittext"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="5dp"
            android:hint="Your Last Name"
            android:textSize="12dp"
            android:inputType="textPersonName"
            android:background="@drawable/edittext"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="5dp"
            android:hint="Enter your location"
            android:textSize="12dp"
            android:inputType="textPostalAddress"
            android:background="@drawable/edittext"
            android:padding="12dp"/>

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="Save"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/white_out_line"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:includeFontPadding="false"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
